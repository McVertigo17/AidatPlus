# Aidat Plus Configuration - .env.example
# Bu dosyayı kopyalayarak .env oluşturun
# NEVER commit .env file - add to .gitignore

# ==================== APP CONFIG ====================

# Application Environment
# Değerler: production, development, testing
APP_ENV=production

# Debug Mode
# Değerler: true, false
APP_DEBUG=false

# ==================== DATABASE CONFIG ====================

# Database URL
# SQLite: sqlite:///aidat_plus.db
# PostgreSQL: postgresql://user:password@localhost/aidatplus
DATABASE_URL=sqlite:///aidat_plus.db

# Database Connection Pool Size
DATABASE_POOL_SIZE=10

# Database SQL Echo (query logging)
# Değerler: true, false
DATABASE_ECHO=false

# ==================== LOGGING CONFIG ====================

# Logging Level
# Değerler: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log File Path
LOG_FILE=logs/app.log

# ==================== UI CONFIG ====================

# GUI Theme
# Değerler: dark, light
GUI_THEME=dark

# Default Window Width
GUI_WINDOW_WIDTH=1400

# Default Window Height
GUI_WINDOW_HEIGHT=900

# ==================== SECURITY CONFIG ====================

# Secret Key (future use)
# Güvenli bir rasgele string kullanın
SECRET_KEY=your-secret-key-here-change-in-production

# Encryption Key (future use)
# Hassas veri encryption için
ENCRYPTION_KEY=your-encryption-key-here

# ==================== BACKUP CONFIG ====================

# Backup Interval (seconds)
BACKUP_INTERVAL=86400

# Backup Directory
BACKUP_PATH=backups/

# Auto Backup Enabled
# Değerler: true, false
AUTO_BACKUP_ENABLED=true

# ==================== FEATURE FLAGS ====================

# Enable Logging Feature
ENABLE_LOGGING=true

# Enable Backup Feature
ENABLE_BACKUP=true

# Enable Reports
ENABLE_REPORTS=true

# Enable Charts
ENABLE_CHARTS=true
