{
  "app": {
    "name": "Aidat Plus",
    "version": "1.3",
    "organization": "Lojman YÃ¶netimi",
    "support_email": "support@aidatplus.local"
  },
  "database": {
    "type": "sqlite",
    "path": "aidat_plus.db",
    "pool_size": 10,
    "pool_recycle": 3600,
    "echo": false,
    "check_same_thread": false
  },
  "ui": {
    "theme": "light",
    "default_width": 1600,
    "default_height": 900,
    "font_size": 11,
    "color_scheme": "modern"
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file": "logs/app.log",
    "max_bytes": 10485760,
    "backup_count": 5
  },
  "features": {
    "enable_logging": true,
    "enable_backup": true,
    "enable_reports": true,
    "enable_charts": true
  }
}
